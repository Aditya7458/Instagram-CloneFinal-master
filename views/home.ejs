            <div class="user-list">
              <div class="img-name-container">
                <div class="profile-img">
                  <img src="<%= e.profile_picture %>" alt="" />
                </div>
                <div class="profile-name">
                  <h3><%=e.fullName%></h3>
                </div>
              </div>
              <button id="<%= e.id %>" class="send-button">send</button>
            </div>
            <%}) %>
          </div>
        </div>
      </div>
      <div class="share-btn">
        <div class="upload-form">
          <div class="share-icons">
            <a class="whatsapp-a" target="_blank" href=""
              ><i class="ri-whatsapp-line"></i
            ></a>
            <a> <i class="ri-qr-scan-2-line"></i></a>
            <a><i class="fa-regular fa-message msg-share"></i></a>
          </div>
        </div>
      </div>
      <div class="overlay4">
        <form
