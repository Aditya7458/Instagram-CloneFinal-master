          </div>
          <div class="story-img">
            <span> Preview: </span>
            <img style="display: none" class="imgg" src="" alt="" />
            <video
              style="display: none"
              class="vdo"
              controls
              autoplay
              loop
              src=""
            ></video>
          </div>
          <div class="upload-cnt">
            <input
              class="story-inp"
              id="file_inp-story"
              type="file"
              name="file"
              onchange="checkFile(id)"
            />
            <button type="submit">Add to Story</button>
          </div>
        </form>
      </div>

      <div class="notification" id="notification">
        <h2>Notifications</h2>
        <% noti.reverse().forEach((i)=>{%>
        <%if(i.userFrom._id.toString()!=i.userTo._id.toString()){ %>
        <%if(i.notificationType == "like"){ %>
        <div class="notification-list">
          <a href="/singlepost/<%=i.entityId %>" class="notification-item">
            <div class="user-avatar">
              <img src="<%=i.userFrom.profile_picture %>" alt="User Avatar" />
            </div>
            <div class="notification-content">
              <p>
                <span class="username"><%= i.userFrom.fullName %></span> liked
                your post.
              </p>
              <span class="timestamp"><%=timeAgo(i.time)%></span>
            </div>
          </a>
        </div>
        <%}%>
        <%if(i.notificationType == "follow"){ %>
        <div class="notification-list">
          <a href="/profile/<%=i.userFrom._id%>" class="notification-item">
            <div class="user-avatar">
              <img src="<%=i.userFrom.profile_picture %>" alt="User Avatar" />
            </div>
            <div class="notification-content">
              <p>
                <span class="username"><%= i.userFrom.fullName %></span> started
                follow you.
              </p>
              <span class="timestamp"><%=timeAgo(i.time)%></span>
            </div>
          </a>
        </div>
        <%}%>
         <%if(i.notificationType == "comment"){%>
        <div class="notification-list">
          <a href="/singlepost/<%= i.entityId %>" class="notification-item">
            <div class="user-avatar">
              <img src="<%= i.userFrom.profile_picture %>" alt="User Avatar" />
            </div>
            <div class="notification-content">
              <p>
                <span class="username"><%= i.userFrom.fullName %></span>
                commented on your post
              </p>
              <span class="timestamp"><%=timeAgo(i.time)%></span>
            </div>
          </a>
        </div>
        <%}%> <%}%> <%}) %>
      </div>

      <div class="share-menu">
        <div class="upload-form">
          <div class="upload-cnt">
            <img class="qrimg" src="" alt="" />
            <h4>scan here to share post</h4>
          </div>
        </div>
      </div>
      <div class="overlay3"></div>
      <div class="overlay">
        <form
          action="/uploadpost"
          class="upload-form"
          method="post"
          enctype="multipart/form-data"
          onsubmit="return checkFile('file_inp')"
