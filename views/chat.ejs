                class="img"
                data-id="<%=e._id%>"
                data-name="<%=e.fullName %>"
                data-img="<%=e.profile_picture%>"
              >
                <img
                  data-id="<%=e._id%>"
                  data-name="<%=e.fullName %>"
                  data-img="<%=e.profile_picture%>"
