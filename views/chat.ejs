      <div class="chat-page">
        <div class="left-sec">
          <a href="/profile/<%=user._id%>">
            <div class="left-header">
              <div class="img">
                <img src="<%= user.profile_picture %>" alt="" />
              </div>
              <div class="profile-name"><%= user.fullName %></div>
            </div></a
          >
          <div class="left-chat-sec">
            <% allUser.forEach(e => { %>
            <div
              class="chat-user"
              id="<%=e._id  %>"
