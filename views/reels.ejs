            <img style="display: none" class="imgg-post" src="" alt="" />
          </div>
          <div class="vdo-preview">
            <video
              style="display: none"
              class="vdo-post"
              controls
              autoplay
              loop
              src=""
            ></video>
          </div>
        </div>
        <div class="upload-cnt">
          <input
            type="text"
            name="title"
            placeholder="What's on your mind ?"
            id=""
          />
          <h6 class="upload-err">Invalid File type</h6>
          <input
            type="file"
            name="file"
            id="file_inp-reels"
